@{
    ViewBag.Title = "会员- 新增普通车主会员";
    Layout = null;
}
<style>
    body {
        display: none;
    }
</style>

<script>

    $(function () {
        if (self == top) {
            var theBody = document.getElementsByTagName('body')[0];
            theBody.style.display = "block";
        } else {
            top.location = self.location;
        }
    });


</script>
<div class="container panel panel-default">
    <div class="panel-body"><strong>新增普通车主会员</strong></div>
</div>
<div class="container panel panel-default">
    <div class="row panel-body">
        <form name="form" class="form-horizontal" role="form" ng-submit="create()" novalidate>
            <div class="form-group">
                <label class="col-md-4 text-right"><span style="color:red">*</span>手机号:</label>
                <div class="col-md-8">
                    <input type="text" name="PhoneNumber" ng-model="newMembership.PhoneNumber" class="form-control" placeholder="请输入手机号" required ng-pattern="/^(1[3|4|5|7|8|][0-9]{9})$/" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 text-right"><span style="color:red">*</span>验证码:</label>
                <div class="col-md-7">
                    <input type="text" name="ValideCode" ng-model="newMembership.ValideCode" class="form-control" placeholder="请输入验证码" required />
                    <input type="button" ng-click="clickSendValidateCode()" class="btn btn-primary" value="发送验证码" ng-disabled="mySwitch" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-4 text-right"><span style="color:red">*</span>用户名（昵称）:</label>
                <div class="col-md-8">
                    <input type="text" name="NickName" ng-model="nickName.NickName" class="form-control" placeholder="请输入昵称或者点击生成昵称" required autofocus />
                    <button type="button" name="CreateNickName" class="btn btn-primary" ng-click="generateNick()">生成昵称</button>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 text-right"><span style="color:red">*</span>车主身份证:</label>
                <div class="col-md-8">
                    <input type="text" name="IdentityNumber" ng-class="" ng-model="newMembership.IdentityNumber" class="form-control" placeholder="请输入车主身份证" required autofocus />
                </div>
            </div>
            
            <div class="col-md-offset-4 col-md-8">
                <button type="submit" class="btn btn-primary" ng-disabled="form.$invalid" ng-hide="newMembership.IsCanClick">确定</button>
                <a class="btn btn-primary" href="#/Membership/Index">返回会员列表</a>
            </div>

        </form>
    </div>
</div>


