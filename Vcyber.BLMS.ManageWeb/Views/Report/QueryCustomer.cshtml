@model List<Vcyber.BLMS.Entity.Generated.IFCustomer>

<head>
    <script>
        try {
            top.location.hostname;
            if (top.location.hostname != window.location.hostname) {
                top.location.href = window.location.href;
            }
        }
        catch (e) {
            top.location.href = window.location.href;
        }
    </script>
</head>

<style>
    body {
        display: none;
    }
</style>

<script>

    $(function () {
        if (self == top) {
            var theBody = document.getElementsByTagName('body')[0];
            theBody.style.display = "block";
        } else {
            top.location = self.location;
        }
    });


</script>
<div class="data-container" style="padding-top:30px">
    <table class="table table-bordered ">
        <thead>
            <tr class="l1">
                <th>客户编号</th>
                <th>客户姓名</th>
                <th>客户手机号</th>
                <th>客户证件号</th>
                <th>客户性别</th>
                <th>客户邮箱</th>
                <th>客户地址</th>
                <th>所属市区</th>
                <th>客户属性</th>
                <th>操作</th>
            </tr>
        <thead>
            @{int count = 0;}
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustId</td>
                        <td>@item.CustName</td>
                        <td>@item.CustMobile</td>
                        <td>@item.IdentityNumber</td>
                        <td>@item.Gender</td>
                        <td>@item.Email</td>
                        <td>@item.Address</td>
                        <td>@item.City</td>
                        <td>@item.AccntType</td>
                        <td><a href="javascript:DelCustomer('@item.CustId')">删除</a></td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="10" align="center" style="color:red">无匹配的数据</td></tr>
            }
        <tbody>
    </table>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    function DelCustomer(custId) {
        if (confirm("您确定要删除此条数据吗?")) {
            $.ajax({
                url: '/Report/DelCustomerByCustId',
                type: 'POST',
                data: { custId: custId },
                success: function (msg) {
                    var data = eval("(" + msg + ")");
                    if (data == true) {
                        alert("删除成功!");
                        // window.location.reload();
                        searchCustomer();
                    }
                    else {
                        alert("删除失败!");
                    }
                }
            });
        }
    }
</script>





