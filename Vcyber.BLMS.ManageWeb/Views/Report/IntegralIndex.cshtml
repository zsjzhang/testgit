@model List<Vcyber.BLMS.Entity.IntegralReportInfo>
@{
    ViewBag.Title = "积分管理分析";
    ViewBag.TitleFocus = "2-2-1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Vcyber.BLMS.ManageWeb.Helper
<script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
<style type="text/css">
    li {
        margin: 5px;
    }

        li span {
            margin-left: 10px;
            text-align: left;
        }

    .input_text2 {
        width: 200px;
    }

    .input_text1 {
        width: 200px;
    }
</style>
<div class="path">

</div>
<div style="height:20px;"></div>
<div class="panel panel-default">
    <table class="table table-bordered table-responsive">
        <tr>
            <td>会员名称：</td>
            <td><input type="text" autocomplete="off" class="input_text1" id="txtname" /></td>
            <td>手机号：</td>
            <td><input type="text" autocomplete="off" class="input_text1" id="txtphone" /></td>
            <td>会员卡号：</td>
            <td><input type="text" autocomplete="off" class="input_text1" id="txtno" /></td>
        </tr>
        <tr>
            <td>时间：</td>
            <td colspan="4">@(Html.TextBox("startTime", "", new { @class = "input_text1", @autocomplete = "off", @onfocus = "WdatePicker({dateFmt:'yyyy-MM-dd',isShowWeek:true,isShowClear:true,readOnly:true})" }))至@(Html.TextBox("endTime", "", new { @class = "input_text1", @onfocus = "WdatePicker({dateFmt:'yyyy-MM-dd',isShowWeek:true,isShowClear:true,readOnly:true})" }))</td>
            <td>
                <input type="button" value="查询" onclick="search();" class="btn btn-primary" />
                <input class="btn btn-primary" type="submit" onclick="toReportExcel()" value="导出" />
            </td>
        </tr>
    </table>
</div>
<div id="divPageList">
    @{
        Html.RenderAction("IntegralPartialPage", new { index = 1, size = 10 });
    }
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    //列表分页
    function GetPageList(pageIndex) {
        var data = {
            RealName: $("#txtname").val().trim(),
            Phone: $("#txtphone").val().trim(),
            No: $("#txtno").val().trim(),
            StartTime: $("#startTime").val(),
            EndTime: $("#endTime").val(),
            index: pageIndex,
            size: 10
        };
        var url = "@Url.Action("IntegralPartialPage")";
        $.ajax({
            url: url,
            type: 'POST',
            data: data,
            success: function (msg) {
                $('#divPageList').html(msg);
            }
        });
    }

    //保存查询条件
    function search() {
        GetPageList(1);
    }

    function toReportExcel() {

        var RealName = $("#txtname").val().trim();
        var Phone = $("#txtphone").val().trim();
        var No = $("#txtno").val().trim();
        var StartTime = $("#startTime").val();
        var EndTime = $("#endTime").val();
        window.location = '/Report/IntegralExport?RealName=' + RealName + '&Phone=' + Phone + "&No=" + No +
            "&StartTime=" + StartTime + "&EndTime=" + EndTime;
        return false;
    }
</script>

