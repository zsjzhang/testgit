                </div>
                <label class="col-md-1 control-label">--</label>
                <div class="col-md-2 text-left">
                    @*<input class="form-control datepicker" id="EndTime" data-date-format="yyyy-mm-dd">*@
                    <input type="text" autocomplete="off" id="EndTime" onfocus="WdatePicker({ startDate: '%y-%M-01 00:00:00',skin: 'whyGreen', dateFmt: 'yyyy-MM-dd HH:mm:ss', alwaysUseStartDate: true }); alwaysUseStartDate: true" class="Wdate" style="width:150px" alwaysusestartdate:true />
