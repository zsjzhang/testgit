@{
    ViewBag.Title = "经销商顾问管理";
    Layout = null;
}

<head>
    <style>
        body {
            display: none;
        }
    </style>
</head>

<script>
    if (self == top) {
        var theBody = document.getElementsByTagName('body')[0];
        theBody.style.display = "block";
    } else {
        top.location = self.location;
    }
</script>

<div class="container panel panel-default">
    <div class="panel-body"><strong>经销商顾问管理</strong></div>
</div>
<div class="container panel panel-default">
    <div class="panel-body">
        <form name="form" class="form-horizontal" novalidate  id="from_search_info" style="display:none;">
            <div class="form-group">
                <label class="col-md-2 control-label">特约店代码：</label>
                <input class="col-md-2 form-control" type="text" placeholder="特约店代码" ng-model="queryModel.DealerId" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary col-md-offset-2" type="button" ng-click="search()" value="查询" />
            </div>
        </form>
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="#/Consultant/Add">添加服务顾问</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="gridStyle" style="height: 410px; border: 1px solid rgb(212,212,212)" ng-grid="gridOptions">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ConsulantDetailModal" tabindex="-1" role="dialog" aria-labelledby="ConsulantDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="ConsulantDetailModal">详情</h4>
            </div>
            <form class="form-horizontal" name="form" novalidate>
                <div class="modal-body">
                    <div class="row">
                        <div>
                            <table class="table table-bordered table-hover">
                                <tr>
                                    <td>姓名:</td>
                                    <td colspan="3" ng-bind="selectDetail.Name"></td>
                                </tr>
                                <tr>
                                    <td>特约店:</td>
                                    <td colspan="3" ng-bind="selectDetail.DealerName"></td>
                                </tr>
                                <tr>
                                    <td width="15%">头像:</td>
                                    <td width="35%"><img src="{{selectDetail.Photo}}" width="120" height="160" alt="" /></td>
                                    <td width="15%">电话:</td>
                                    <td width="35%" ng-bind="selectDetail.Tel"></td>
                                </tr>
                                <tr>
                                    <td>性别:</td>
                                    <td ng-bind="selectDetail.SexName"></td>
                                    <td>年龄:</td>
                                    <td ng-bind="selectDetail.Age"></td>
                                </tr>
                                <tr>
                                    <td>备注:</td>
                                    <td colspan="3" ng-bind="selectDetail.Comment"></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </form>
        </div>
    </div>
</div>
