@model System.Data.DataTable
@using System.Data;
@{
    Layout = null;
}

<style type="text/css">
    table.gridtable {
        font-family: "微软雅黑",verdana,arial,sans-serif;
        font-size: 14px;
        color: #333333;
        border-width: 1px;
        border-color: #666666;
        border-collapse: collapse;
        width: 595px;
        margin-top:20px;
    }

        table.gridtable th {
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #666666;
            background-color: #dedede;
        }

        table.gridtable td {
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #666666;
            background-color: #eaf6fd;
            border-collapse: collapse;
            text-align: center;
            color: #000;
            width:10%;
        }
</style>
<div>
    <table class="gridtable">
        @if (Model != null)
        {
            <thead>
                <tr>
                    @for (int i = 0; i < Model.Columns.Count; i++)
                    {
                        <th>@Model.Columns[i].ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (var item in row.ItemArray)
                        {
                            <td>@item</td>
                        }
                    </tr>
                }

            </tbody>
        }
    </table>
</div>