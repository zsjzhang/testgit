@model IEnumerable<Vcyber.BLMS.Entity.Product>
@{
    Layout = null;
}
<style>
    .list_show dl dd {
        float: left;
    }

    p.carNameL {
        text-align: left;
        margin-top: 10px;
    }
</style>
<div>
    <div class="product_show">
        <div class="biaoti_title">
            <dl>
                <dt></dt>
                <dd>
                    <h3>最热商品</h3>
                    <p>Top Commodity</p>
                </dd>
            </dl>
        </div>
       
       
           
        <div class="list_show">
            <ul>
                @{
                    if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <li>
                                <a href="/Product/ProductDetail?productId=@item.ID" target="_blank">
                                    <span style=" width:110px; height:110px; display:inline-block;">
                                        <img src="@item.Image" style="width:110px; height:110px;" />
                                    </span>
                                </a>
                                <h3>
                                    <a href="/Product/ProductDetail?productId=@item.ID">
                                        @item.Name
                                    </a>
                                </h3>
                                <p class="carName">
                                    @if (item.IsIdentity == 12)
                                    {
                                        <span>金卡：@Html.Raw(string.Format("{0}积分", item.FrontGoldMemberIntegral)) </span>
                                    }
                                    else if (item.IsIdentity == 11)
                                    {
                                        <b>银卡：@Html.Raw(string.Format("{0}积分", item.FrontSilverMemberIntegral))</b>
                                    }
                                    else if (item.IsIdentity == 10)
                                    {
                                        <em>普卡：@Html.Raw(string.Format("{0}积分", item.Integral))</em>
                                    }
                                    else if (item.IsIdentity == 13)
                                    {

                                        <span>金卡：@Html.Raw(string.Format("{0}积分", item.FrontGoldMemberIntegral)) </span>
                                        <b>银卡：@Html.Raw(string.Format("{0}积分", item.FrontSilverMemberIntegral))</b>
                                    }
                                    else
                                    {
                                        <span>金卡：@Html.Raw(string.Format("{0}积分", item.FrontGoldMemberIntegral)) </span>
                                        <b>银卡：@Html.Raw(string.Format("{0}积分", item.FrontSilverMemberIntegral))</b>
                                        <em>普卡：@Html.Raw(string.Format("{0}积分", item.Integral))</em>

                                    }
                                </p>
                            </li>

                        }
                    }
                }

                </ul>

</div>
        </div>
</div>