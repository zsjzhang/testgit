@model IEnumerable<Vcyber.BLMS.Entity.Product>
@{
    Layout = null;
}
<style>
.list_show dl dd {
        float: left;
    }

    p.carNameL {
        text-align: left;
        margin-top: 10px;
    }

    .list_s_t {
        width: 152px;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
     .product_show ul {
        height: 260px;
    }

    .carName {
        font-size: 12px;
        text-align: center;
        line-height: 20px;
    }

        .carName span {
            display: block;
            color: #f49600;
            height: 25px;
        }

        .carName b {
            display: block; /*color:#065090;*/
            color: #f49600;
            height: 25px;
        }

        .carName em {
            display: block; /*color:#777;*/
            color: #f49600;
            height: 25px;
        }

    .list_show dl {
        height: 125px;
    }
</style>
<div class="For_ranking">
    <div class="biaoti_title">
        <dl>
            <dt></dt>
            <dd>
                <h3>兑换排行</h3>
                <p>Top Exchange</p>
            </dd>
        </dl>
    </div>
    <div class="list_show">
        @{
            if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <dl>
                        <dt>
                            <b>1</b>
                            <a href="/Product/ProductDetail?productId=@item.ID" target="_blank">
                                <span style=" width:90px; height:90px; display:inline-block;">
                                    <img src="@item.Image" style="width:90px; height:90px;" />
                                </span>
                            </a>
                        </dt>
                        <dd>
                            <p class="list_s_t">
                                <a href="/Product/ProductDetail?productId=@item.ID">
                                    @item.Name
                                </a>
                            </p>
                            <p class="carName carNameL">
                                @if (item.IsIdentity == 12)
                                {   
                                    <span>金卡：@Html.Raw(string.Format("{0}积分", item.FrontGoldMemberIntegral)) </span>
                                }
                                else if (item.IsIdentity == 11)
                                {
                                    <b>银卡：@Html.Raw(string.Format("{0}积分", item.FrontSilverMemberIntegral))</b>
                                }
                                else if (item.IsIdentity == 10)
                                {
                                    <em>普卡：@Html.Raw(string.Format("{0}积分", item.Integral))</em>
                                }
                                else if (item.IsIdentity == 13)
                                {

                                    <span>金卡：@Html.Raw(string.Format("{0}积分", item.FrontGoldMemberIntegral)) </span>
                                    <b>银卡：@Html.Raw(string.Format("{0}积分", item.FrontSilverMemberIntegral))</b>
                                }
                                else
                                {  
                                   <span>金卡：@Html.Raw(string.Format("{0}积分", item.FrontGoldMemberIntegral)) </span>
                                   <b>银卡：@Html.Raw(string.Format("{0}积分", item.FrontSilverMemberIntegral))</b>
                                   <em>普卡：@Html.Raw(string.Format("{0}积分", item.Integral))</em>

                                }
                              
                              
                              
                            </p>
                        </dd>
                    </dl>

                }
            }
        }
    </div>
</div>
