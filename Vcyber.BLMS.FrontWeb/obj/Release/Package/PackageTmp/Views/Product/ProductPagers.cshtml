@model IList<Vcyber.BLMS.Entity.Product>
@{
    Layout = null;
}
<div class="MallProductPagers">
    @{
        if (Model != null && Model.Any())
        {
            <ul>
                @foreach (var item in Model)
                {
                    <li>
                        <span>
                            <a href="/Product/ProductDetail?productId=@item.ID"><img src="@item.Image" /></a>
                        </span>
                        <span>
                            <label>
                                @item.Name
                            </label>
                            <label>
                                @item.Integral
                            </label>
                            <label>
                                @item.BlueBean
                            </label>
                        </span>
                    </li>
                }
            </ul>
        }
    }
</div>
<div class="pagers">
    @Html.Action("MallPager", "Pagers", new { pageIndex = ViewBag.PageIndex, pageSize = ViewBag.PageSize, totalCount = ViewBag.totalCount })
</div>