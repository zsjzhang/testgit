@{
    ViewBag.Title = "用户收支明细";
}
<link href="~/css/UserBusiness.css" rel="stylesheet" />
<script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/UserRegister/UserBusiness.js"></script>
<script type="text/javascript">
    $(function () {
        userBusiness.Search();
    });
</script>
<div>
    <h2>收支明细</h2>
    <hr />
    <div class="oneDiv">
        <div>
            <label for="startTime">操作时间：</label><input type="text" id="startTime" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',isShowWeek:true,isShowClear:true,readOnly:true})" />-<input type="text" id="endTime" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss',isShowWeek:true,isShowClear:true,readOnly:true})" />
        </div>
        <div>
            <label for="startMoney">金额范围：</label><input type="text" id="startMoney" />-<input type="text" id="endMoney" />
        </div>
        <div>
            <label>收支类型：</label>
            <select id="tradeType">
                <option value="0">全部</option>
                <option value="1">支付</option>
                <option value="2">退款</option>
            </select>
        </div>
        <div>
            <input type="button" value="查询" id="search" onclick="userBusiness.Search();" />
        </div>
    </div>
    <div class="twoDiv">
        <div id="TableDiv">
            <div id="HeaderDiv">
                <div>日期</div>
                <div>收支类型</div>
                <div>收支金额</div>
                <div>交易流水</div>
                <div>备注</div>
            </div>

            @*<div class="RowDiv">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>*@
        </div>
    </div>
</div>


