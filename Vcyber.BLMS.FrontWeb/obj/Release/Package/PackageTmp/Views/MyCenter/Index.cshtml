                if (ViewBag.reIntegralType != -1 && Model.IsPay == 0 && ViewBag.registerUserGetIntegral != 0)
                {
                    int reIntegral = ViewBag.reIntegralType;
                    int registerUserGetIntegral = ViewBag.registerUserGetIntegral;
                    string reIntegraltext = string.Empty;

                    switch (reIntegral)
                    {
                        case 0:
                            reIntegraltext = "您交费100元即可获得价值" + registerUserGetIntegral + "元积分奖励";
                            break;
                        case 1:
                            reIntegraltext = "您交费100元即可获得价值" + registerUserGetIntegral + "元积分奖励";
                            break;
                        case 2:
                            reIntegraltext = "您交费50元即可获得价值" + registerUserGetIntegral + "元积分奖励";
                            break;
                        case 3:
                            reIntegraltext = "您交费50元即可获得价值" + registerUserGetIntegral + "元积分奖励";
                            break;
                        case -1:
                            reIntegraltext = "";
