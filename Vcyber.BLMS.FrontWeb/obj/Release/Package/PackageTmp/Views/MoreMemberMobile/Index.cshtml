    <script>
        $(function () {
            var objlyear = null;
            //判断是否登录
            $(".btn_happy").click(function () {
                $.ajax({
                    url: "/MoreMemberMobile/GetLogin",
                    type: "get",
                    success: function (result) {
                        if (result.msg == "true") { //已登录
                            location.href = "/MoreMemberMobile/Game?source=@ViewBag.source";
                        }
                        else {  //未登录
                            objlyear = layer.open({
                                type: 1,   //0-4的选择,
                                title: false,
                                border: [0],
                                closeBtn: [0],
                                shadeClose: false,
                                area: ['92%', ''],
                              content: $('.choose')
                            });
                        }
                        $(".xubox_shade").click(function () {
                            layer.close(objlyear);
                        })
                    },
                    error: function () {

                    }

                })


            });
            $(".wati").click(function () {
                layer.close(objlyear);
            })
            //登录注册跳转
            $("#register").click(function () {
                layer.close(objlyear);
                var returnUrl = "/MoreMemberMobile/Index?source=@ViewBag.source";
                location.href = "/WapQuestionnaire/WapRegister?returnUrl=" + encodeURIComponent(returnUrl) + "&source=@ViewBag.source";
            })
            $("#login").click(function () {
                layer.close(objlyear);
                var returnUrl = "/MoreMemberMobile/Index?source=@ViewBag.source";
                location.href = "/WapQuestionnaire/WapLogin?returnUrl=" + encodeURIComponent(returnUrl) + "&source=@ViewBag.source";
            })
        })
    </script>
