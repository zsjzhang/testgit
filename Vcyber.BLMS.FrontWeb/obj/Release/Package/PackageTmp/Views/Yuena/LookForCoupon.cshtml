
@{
    ViewBag.Title = "查看优惠券";
    Layout = "~/Views/Shared/_LayoutYuena.cshtml";
}
<div class="findstyle">
    <div class="findstyle_con">
        <h2>如何找到卡券</h2>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <div class="swiper-slide"><img src="~/Contents/yuena/images/findstyle1.png"></div>
                <div class="swiper-slide"><img src="~/Contents/yuena/images/findstyle2.png"></div>
                <div class="swiper-slide"><img src="~/Contents/yuena/images/findstyle3.png"></div>
            </div>
        </div>
        <a class="btn_prev" href="#"><img src="~/Contents/yuena/images/prev.png"></a>
        <a class="btn_next" href="#"><img src="~/Contents/yuena/images/next.png"></a>
    </div>
</div>
<script type="text/javascript">
		var mySwiper = new Swiper('.swiper-container',{
			mode : 'horizontal',
			keyboardControl : true,
			mousewheelControl : true
		});
		$('.btn_prev').click(function(){
			mySwiper.swipePrev();
		})
		$('.btn_next').click(function(){
			mySwiper.swipeNext();
		})
</script>