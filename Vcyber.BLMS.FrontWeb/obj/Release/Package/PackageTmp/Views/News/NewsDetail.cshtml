@model Vcyber.BLMS.Entity.News
@{
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
    ViewBag.Title = Model.Title;
}
<style>
    .detail p {
        margin-left: 2px;
        color: #3d3f43;
        text-indent: 0px;
        line-height: 26px;
    }

    .news_title {
        min-width: 698px;
        height: 90px;
    }

    .news_t_l {
        width: 100%;
    }

    .fenxiang {
        max-width: 270px;
    }
    .acx_box strong {
        font-weight: bold;
    }
</style>
<div>
    <input type="hidden" id="share_title" value="北京现代会员服务品牌-bluemembers蓝缤官方网站，北京现代车主用车服务，第九代索纳塔车主尊享6+1车辆生活服务、售后服务、预约服务、经销商查询、最新活动、企业最新动态等超多资讯尽在北京现代bluemembers官方网站。" />
    <div class="header">
        @Html.Action("HomeHeader", "Header")
    </div>

    <div class="n_all_cont">

        <div class="n_left_cont">
            <div class="center logon" style="width: 286px; height: auto; margin-top: 0;">
                @{
                    if (this.User.Identity.IsAuthenticated)
                    {
                        @Html.Action("HomeLogonSuccess", "Account")
                    }
                    else
                    {
                        @Html.Action("HomeLogon", "Account")
                    }
                }
            </div>
            <div class="homereserve">
                @Html.Action("ReserveRegion", "Home")
            </div>
            <div class="homeShortcut">
                @Html.Action("ShortcutRegion", "Home")
            </div>
            <div class="homeproduct">
                @Html.Action("HotExchangeProductList", "Product")
            </div>
            <div class="homehotnews">
                @Html.Action("HotNewsRegion", "home")
            </div>
        </div>

        <div class="n_right_cont">
            <p class="select_menu">
                <a href="/Home/Default">首页 ></a><a href="/News/NewsPages">热门新闻 ></a><a href="">新闻详情</a>
            </p>

            @{
                if (Model != null)
                {
                    <div class="active_xq detail new_xq">
                        <div class="news_title" style="height:98px;">
                            <div class="news_t_l" style="margin-left:0; text-align:center;">
                                <h3>@Model.Title</h3>
                                <div style="margin-left: 2px; color: #3d3f43; text-indent: 0px; line-height: 26px; font-size: 12px; margin-top: 18px; ">
                                    <span class="clock" style="float:right; margin-right:25px;">发布时间：@Model.CreateTime.ToString("yyyy-MM-dd")</span>
                                    <div style="float:left; ">
                                        @Html.Action("ShareLayer", "Home")
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="acx_box" style="word-wrap: break-word;">

                            @Html.Raw(Model.TrueContent)
                        </div>

                    </div>
                }
            }
        </div>

    </div>
    <div class="footer">
        @Html.Action("Index", "Footer")
    </div>
</div>