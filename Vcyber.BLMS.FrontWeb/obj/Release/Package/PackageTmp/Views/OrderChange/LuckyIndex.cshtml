        .bluePopupForm {
            background: url(/images/popWin1.png) no-repeat;
            background-size: 105% 105%;
        }
        .bluePopupForm2 {
            background: url(/images/popWin1.png) no-repeat;
            background-size: 105% 105%;
        }

        .noaward {
            position: relative;
        }

        .aConBox {
            text-align: left;
        }

        .bluePopupForm {
            height: 90% !important;
            padding-bottom: 30px;
        }

            .bluePopupForm .layui-layer-content {
                height: 70% !important;
                width: 540px;
                margin-top: 50px !important;
                overflow: auto !important;
                background-image: none !important;
                margin-left: 0 !important;
                padding: 0 !important;
                color: inherit !important;
                line-height: inherit !important;
            }
       

            .bluePopupForm2 .layui-layer-content {
                height: 70% !important;
                width: 540px;
                margin-top: 50px !important;
                overflow: auto !important;
                background-image: none !important;
                margin-left: 0 !important;
                padding: 0 !important;
                color: inherit !important;
                line-height: inherit !important;
            }

        .aConBox {
            text-align: center;
            color: #333;
        }

            .aConBox p {
                width: 400px;
                margin: 0 auto;
                font-size: 36px;
                margin-bottom: 30px;
                text-align: center;
            }

            .aConBox em {
                font-size: 22px;
                width: 80%;
                margin: 0 auto;
                display: block;
                text-align: center;
            }

            .aConBox form input {
                width: 400px;
                height: 30px;
                font-size: 20px;
                padding: 10px;
                line-height: 30px;
                margin: 8px 0;
                border-radius: 5px;
                border: 1px solid #9c9c9c;
                font-family: "Microsoft YaHei","SimSun";
            }

            .aConBox form select {
                width: 120px;
                float: left;
                margin-left: 32px;
                height: 50px;
                line-height: 30px;
                padding: 10px;
                border-radius: 5px;
                font-size: 22px;
                border: 1px solid #9c9c9c;
                font-family: "Microsoft YaHei","SimSun";
            }

            .aConBox form div {
                width: 90%;
                margin: 0 auto;
                text-align: center;
            }

            .aConBox span.tishi {
                padding: 20px;
               
                display: block;
                margin-left: 100px;
                text-align: left;
            }

        .bluePopupForm .layui-layer-btn {
            position: relative;
            margin-top: 10px;
        }
        .bluePopupForm2 .layui-layer-btn {
            position: relative;
            margin-top: -60px;
        }
