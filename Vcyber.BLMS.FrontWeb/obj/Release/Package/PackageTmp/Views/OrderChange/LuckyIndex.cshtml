                    line-height: 67px;
                    padding: 0;
                    margin: 0 auto;
                    color: #00458d;
                    font-size: 30px;
                    text-align: center;
                    background: url(/images/bgBtn.png) no-repeat;
                    background-size: 100% 100%;
                    border: none;
                    margin: 0 15px;
                }

                .bluePopup .layui-layer-btn .layui-layer-btn1 {
                    position: relative;
                    display: inline-block;
                    width: 203px;
                    height: 67px;
                    line-height: 67px;
                    padding: 0;
                    margin: 0 auto;
                    color: #00458d;
                    font-size: 30px;
                    text-align: center;
                    background: url(/images/bgBtn.png) no-repeat;
                    background-size: 100% 100%;
                    border: none;
                    margin: 0 15px;
                }

                    .bluePopup .layui-layer-btn .layui-layer-btn1:hover, .bluePopup .layui-layer-btn .layui-layer-btn0:hover {
