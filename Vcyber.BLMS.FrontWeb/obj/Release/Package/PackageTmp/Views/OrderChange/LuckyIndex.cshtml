            height: 180px !important;
            font-size: 14px;
        }
        .bluePopup2 .layui-layer-content {
            padding: 0;
            overflow: visible;
            background: url(../images/blueBoy.png) no-repeat;
            margin-left: 25px;
            margin-top: 15px;
            padding: 10px 20px 20px 70px;
            height: 70px;
            line-height: 25px;
            color: #075090;
        }

            .bluePopup .layui-layer-btn {
                margin: 0;
                padding: 0;
                position: absolute;
                margin-top: -160px;
                width: 100%;
            }

                .bluePopup .layui-layer-btn .layui-layer-btn0 {
                    position: relative;
                    display: inline-block;
                    width: 203px;
