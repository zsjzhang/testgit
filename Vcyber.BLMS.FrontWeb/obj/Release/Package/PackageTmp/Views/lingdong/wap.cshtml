        }
        else if (sourceId == 'weibo') {
            _hmt.push(['_setCustomVar', 5, 'ques_visitor', '微博', 3]);
        }
        else if (sourceId == 'edm') {
            _hmt.push(['_setCustomVar', 5, 'ques_visitor', 'EDM', 3]);
        }
        else if (sourceId == "magazine") {
            _hmt.push(['_setCustomVar', 5, 'ques_visitor', '杂志', 3]);
        }
        else if (sourceId == "sms") {
            _hmt.push(['_setCustomVar', 5, 'ques_visitor', '短信', 3]);
