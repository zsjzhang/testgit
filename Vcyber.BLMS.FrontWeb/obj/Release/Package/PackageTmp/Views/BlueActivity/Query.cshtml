                background: #075090;
                width: 100px;
            }

                .bluePopupWin .layui-layer-btn .layui-layer-btn0:hover {
                    background: #0B63b7;
                }
</style>
<script type="text/javascript">
    $(function () {
        //中奖名单滚动数值
        $('.Listover')
            .myScroll({
                speed: 80, //数值越大，速度越慢
                rowHeight: 48 //li的高度
            });
    });
</script>
<div>
    <div class="header">
        @Html.Action("HomeHeader", "Header", new { pageName = "Home", showMenu = false })
    </div>
    <div class="drawMain">

        <div class="width100Up">
            <div class="drawMainCon1">
                <!--中奖手机号搜索-->
                <div class="winList-tel">
                    <div class="winList-bg"></div>
                    <div class="winListSearch">
                        <input type="text" id="phone" value="" placeholder="请输入手机号">
                        <input type="button" id="search" class="searchPhone" value="查询">
                    </div>
                </div>
                <!--中奖名单-->
                <div class="winList">
                    <div class="Listover">
                        <ul>
                            @foreach (var item in Model)
                            {
                                <li><span>@item.Phone</span><i>@item.Prize</i></li>
                            }

                        </ul>
                    </div>
                </div>
                <!--中奖信息-->
                <div class="winInfor">

                    <h2>活动时间：2016年6月2日-2016年6月8日</h2>
                    <dl>
                        <dt></dt>
                        <dd>
                            <div class="ddBg"></div>
                            <div class="winInforCont">
                                <p class="numb">
                                    当前蓝豆：<i id="blue">@ViewBag.TotalBlueBean</i>颗
                                </p>
                                <p class="winDrawName">
                                    <a href="/BlueActivity/index">我要抽奖</a>
                                </p>
                            </div>
                        </dd>

                    </dl>
                </div>
            </div>
        </div>

        <div class="width100Down">
            <div class="drawMainCon2">
                <!--抽奖规则-->
                <div class="ruleTxtBox">
                    <h6></h6>
                    <h2>亲爱的bluemembers 蓝缤会员</h2>

                    <p>
                        北京现代bluemembers网站即将全面升级，网站所有蓝豆将于<strong style="color: red;">2016年6月8日晚24：00时</strong>进行清零，尽快开始您的蓝豆兑换节奏吧！为回馈广大会员长久以来的关注支持，您不仅可以在在线商城进行礼品兑换，还可以使用蓝豆参与抽奖活动，奖品丰厚哦。
                    </p>
                    <h3>活动规则：</h3>
                    <p>1. 活动期间，bluemembers蓝缤会员均可以使用蓝豆参与活动。</p>
                    <p>2. 每次抽奖机会消耗100蓝豆，每位用户的抽奖次数不限。</p>

                    <h3>活动对象：</h3>
                    <p>北京现代bluemembers 蓝缤所有会员。</p>

                    <h3>活动流程：</h3>
                    <p>兑换：会员登录--在线商城--蓝豆兑换--礼品邮寄</p>
                    <p>抽奖：会员登录--抽奖--完善信息--奖品邮寄</p>

                    <h3>注意事项：</h3>
                    <p>本活动仅限北京现代bluemembers会员参与；</p>
                    <p>本次活动中奖礼品将会在活动结束后5个工作日进行邮寄，如遇节假日则顺延发出；</p>
                    <p>抽中奖品的会员，请务必正确填写个人邮寄信息，中奖后保持手机畅通，活动期间若联系无效者，将视为自动放弃领奖机会；</p>
                    <p>您于本网站提供的个人信息只用于北京现代本次活动与您沟通联络时使用。活动中如有疑问请及时拨打北京现代24小时客服热线：400-800-1100（手机拨打）或咨询bluemembers在线客服。</p>
                    <p>
                        <strong>*本活动最终解释权归北京现代汽车有限公司所有。</strong>
                    </p>

                </div>

            </div>

        </div>

    </div>
</div>
<script type="text/javascript">
    function searchPhone(phNum) {
        switch (phNum) {
            case 0:
                layer.open({
                    type: 1,
                    skin: 'bluePopup', //样式类名
                    closeBtn: 1, //不显示关闭按钮
                    shift: 2,
                    shadeClose: true, //开启遮罩关闭
                    content: '不好意思，离奖品只差一步哦！',
                    btn: ['确定']
                });
                break;
            case 1:
                layer.open({
                    type: 1,
                    skin: 'bluePopupWin', //样式类名
                    closeBtn: 1, //不显示关闭按钮
                    shift: 2,
                    shadeClose: true, //开启遮罩关闭
                    content: '恭喜您，抽中usb充电器一个，奖品稍后（活动结束后10个工作日内）会统一安排邮寄，请保持手机畅通！',
                    btn: ['确定']
                });
                break;
            case 2:
                layer.open({
                    type: 1,
                    skin: 'bluePopupWin', //样式类名
                    closeBtn: 1, //不显示关闭按钮
                    shift: 2,
                    shadeClose: true, //开启遮罩关闭
                    content: '恭喜您，抽中移动卡片电源一个，奖品稍后（活动结束后10个工作日内）会统一安排邮寄，请保持手机畅通！',
                    btn: ['确定']
                });
                break;
        }
    }
    $(document).ready(function () {
        $("#search").click(function () {
            var phone = $("#phone").val().trim();
            if (!phone) {
                layer.open({
                    type: 1,
                    skin: 'bluePopup', //样式类名
                    closeBtn: 1, //不显示关闭按钮
                    shift: 2,
                    shadeClose: true, //开启遮罩关闭
                    content: '请输入您的手机号码！',
                    btn: ['确定']
                });
                return;
            }
            $.ajax({
                type: 'POST',
                url: "/BlueActivity/QueryByPhone",
                data: { "phone": phone },
                success: function (data) {
                    if (data.Success) {
                        searchPhone(data.Status);
                    } else {
                        searchPhone(0);
                    }
                },
                error: function () {
                    searchPhone(0);
                },
                dataType: "json"
            });
        });
    });
</script>