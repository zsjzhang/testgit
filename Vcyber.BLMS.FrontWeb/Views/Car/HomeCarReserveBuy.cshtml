@{
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
    ViewBag.Title = "订车";
}
<script src="~/Content/laydate/laydate.js"></script>
<div>
    <div class="header">
        @Html.Action("HomeHeader", "Header", new { pageName = "BlueVIP" })
    </div>
    <div class="n_all_cont" style="height:1200px;">
        <div class="n_left_cont">
            <div class="center logon" style=" width: 286px; height: auto; margin-top:0;">
                @{
                    if (this.User.Identity.IsAuthenticated)
                    {
                        @Html.Action("HomeLogonSuccess", "Account")
                    }
                    else
                    {
                        @Html.Action("HomeLogon", "Account")
                    }
                }
            </div>
            <div class="homereserve">
                @Html.Action("ReserveRegion", "Home")
            </div>
            <div class="homeShortcut">
                @Html.Action("ShortcutRegion", "Home")
            </div>
            <div class="homeproduct">
                @Html.Action("HotExchangeProductList", "Product")
            </div>
            <div class="homehotnews">
                @Html.Action("HotNewsRegion", "home")
            </div>

        </div>
        <div class="n_right_cont">
            <div class="gy_cont" style="margin-top:0;">
                <div class="gy_title">
                    <div class="gy_zi">
                        <h1>订车</h1>
                        <span>Order Car</span>
                    </div>
                </div>
                <div class="gy_nr" style="overflow:hidden">
                    <div class="home_cont" style="margin-bottom:20px;">
                        <p style="margin: 20px 10px 10px 10px; width:auto;">服务预约提示：为了确保厂家和特约店为您提供更加快捷、周到的服务，请您正确填写以下资料信息，带"*"号为必填项，感谢您的支持！</p>
                        <hr />
                        <p>
                            <span>*</span><label>订购车型：</label>
                            @Html.Action("CarTypeView", "Car", new { })
                        </p>
                        <p>
                            <span>*</span><label>选择经销商：</label>
                            @Html.Action("ProvinceCity", "Car", new { IsDingChe =1})
                        </p>
                        <p>
                            <span>*</span><label>姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名：</label>
                            <input class="input_duan" type="text" id="homeCarReserveBuyUserName" name="homeCarReserveBuyUserName" />
                        </p>
                        <p>
                            <span></span><label>性&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;别：</label>
                            <input type="radio" name="homeCarReserveBuyGender" value="1" id="homeCarReserveBuyGenderMan" checked="checked" class="radio_btn_cc" style=" border: none;" /><b>男</b>
                            <input type="radio" name="homeCarReserveBuyGender" value="0" id="homeCarReserveBuyGenderWoman" class="radio_btn_cc" style="margin-left:38px; border: none;" /><b>女</b>
                        </p>
                        <p>
                            <span></span><label>电子邮箱：</label>
                            <input class="input_duan" type="text" id="homeCarReserveBuyUserEmail" name="homeCarReserveBuyUserEmail" />
                        </p>
                        <p>
                            <span>*</span><label>手&nbsp;&nbsp;&nbsp;机&nbsp;&nbsp;&nbsp;号：</label>
                            <input class="input_duan" type="text" id="homeCarReserveBuyUserMobile" name="homeCarReserveBuyUserMobile" />
                        </p>
                     
                        <p style="margin-left:200px;">
                            <a id="btnReserveCarReserveBuy" href="javascript:void(0);" style="display:block; width: 230px; height:32px; line-height:32px; text-align:center; cursor:pointer; background-color:#075090; margin:0; color:#FFF;">
                                提<b style="margin: 0 6px;"></b>交
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer">
    @Html.Action("Index", "Footer")
</div>