@{
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
    ViewBag.Title = "MagazineApply";
}
<style>
    #carType {
        width: 230px;
    }
</style>
<div>
    <div class="header">
        @Html.Action("HomeHeader", "Header", new { pageName = "Car" })
    </div>
    <div class="n_all_cont" style="height:1200px;">
        <div class="n_left_cont">
            <div class="center logon" style=" width: 286px; height: auto; margin-top:0;">
                @{
                    if (this.User.Identity.IsAuthenticated)
                    {
                        @Html.Action("HomeLogonSuccess", "Account")
                    }
                    else
                    {
                        @Html.Action("HomeLogon", "Account")
                    }
                }
            </div>
            <div class="homereserve">
                @Html.Action("ReserveRegion", "Home")
            </div>
            <div class="homeShortcut">
                @Html.Action("ShortcutRegion", "Home")
            </div>
            <div class="homeproduct">
                @Html.Action("HotExchangeProductList", "Product")
            </div>
            @*<div class="homehotnews">
                    @Html.Action("HotNewsRegion", "home")
                </div>*@
            <div class="homehotnews">
                @Html.Action("HotManual", "News")
            </div>

        </div>
        <div class="n_right_cont">
            <p class="select_menu"><a href="/Home/Default">首页&gt;</a><a href="javascript:void(0);">申请电子杂志 </a></p>
            <div class="gy_nr" style="overflow:hidden">
                <div class="home_cont" style="margin-bottom:20px;">
                    @*<p style="margin: 20px 10px 10px 10px; width:auto; color:#e9966a;">尊敬的会员您好，为了便于杂志的邮寄，请您准确填写以下个人信息及邮寄地址。</p>*@

                    <p style="height:1px;">
                        <label style="width: 170px; text-align:right;"></label>
                    </p>
                    <div class="choose_ad" style="display:none;">
                        <span class="choose_B" style="width:112px;line-height: 30px; margin-left:67px;"><label>请选择一期杂志：</label></span>

                        <select class="choose_B" id="magazineList" style=" border: 1px solid #CBCBCB; margin-left:1px;">
                            <option value="-1">请选择</option>
                            @{
                                List<Vcyber.BLMS.Entity.Magazine> _magazineList = ViewData["magazineList"] as List<Vcyber.BLMS.Entity.Magazine>;
                                if (_magazineList != null && _magazineList.Any())
                                {
                                    foreach (var magazine in _magazineList)
                                    {
                                        <option value="@magazine.Id" title="@magazine.Title">@magazine.Title</option>
                                    }
                                }
                            }
                        </select>

                    </div>
                    <p>
                        <label style="width: 170px; text-align:right;">姓名：</label>
                        <input class="input_duan" type="text" id="homeReserveDriveUserName" name="homeReserveDriveUserName" />
                    </p>

                    <p>
                        <label style="width: 170px; text-align:right;">手机号：</label>
                        <input class="input_duan" type="text" id="homeReserveDriveUserMobile" name="homeReserveDriveUserMobile" />
                    </p>

                    <p>
                        <label style="width: 170px; text-align:right;">电子邮箱：</label>
                        <input class="input_duan" type="text" id="homeReserveDriveUserPostCode" name="homeReserveDriveUserPostCode" />
                    </p>
                    <div>
                        <p>
                            <label style="width: 170px; text-align:right;">车型(车主选填)：</label>
                            @Html.Action("CarTypeView", "Car", new { })
                        </p>
                    </div>                    
                    <p style="height:20px;width:200px;" />
                    <p style="margin-left:200px;">
                        <a id="btnHomeReserveApply" href="javascript:void(0);" style="display:block; width: 130px; height:32px; line-height:32px; text-align:center; cursor:pointer; background-color:#075090; margin:0; color:#FFF;">
                            提<b style="margin: 0 6px;"></b>交
                        </a>
                    </p>
                    <p style="height:50px;width:200px;" />
                </div>
            </div>

        </div>
    </div>
    <div class="footer">
        @Html.Action("Index", "Footer")
    </div>
</div>
<script>
    $(function () {
        $("#carType").children().first().before("<option value='-1'>请选择</option>");
        $("#carType").val("-1");
    });
</script>

