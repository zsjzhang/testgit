@{
    int _totalCount = ViewBag.totalCount;
    int _pageIndex = ViewBag.pageIndex;
    int _pageSize = ViewBag.pageSize;
    int _pageCount = ViewBag.pageCount;
}
<div class="f_y_1">

    @{
        if (_pageCount > 0)
        {
            <div class="a_n" onclick="goPager(1)">
                <a href="javascript:void(0);" title="上一页">首页</a>
            </div>
            if (_pageIndex > 1)
            {
                <div class="a_n" onclick="goPager(@(_pageIndex-1))">
                    <a href="javascript:void(0);" title="上一页">上一页</a>
                </div>
            }
            else
            {
                <div class="a_n"><span class="disabled a_n">上一页</span></div>
            }
            <ul>
                @if (_pageCount <= 8)
                {
                    for (int i = 1; i <= _pageCount; i++)
                    {
                        if (i == _pageIndex)
                        {
                            <li class="curr">
                                <span>@i</span>
                            </li>
                        }
                        else
                        {
                            <li onclick="goPager(@i)">
                                <a href="javascript:void(0);" title="第 @i 页">@i</a>
                            </li>
                        }
                    }
                }
                else
                {
                    if (_pageIndex <= 5)
                    {
                        for (int i = 1; i <= 7; i++)
                        {
                            if (_pageIndex == i)
                            {
                                <li class="curr">
                                    <span>@i</span>
                                </li>
                            }
                            else
                            {
                                <li onclick="goPager(@i)">
                                    <a href="javascript:void(0);" title="第 @i 页">@i</a>
                                </li>
                            }
                        }
                        @*<li>
                                <span>...</span>
                            </li>*@
                    }
                    else
                    {
                        <li class="a_n" onclick="goPager(1)">
                            <a href="javascript:void(0);" title="第1页">1</a>
                        </li>
                        <li class="a_n" onclick="goPager(2)">
                            <a href="javascript:void(0);" title="第2页">2</a>
                        </li>
                        <li>
                            <span>...</span>
                        </li>
                        int begin = _pageIndex - 2;
                        int end = _pageIndex + 2;

                        if (end > _pageCount)
                        {
                            end = _pageCount;
                            begin = end - 4;
                            if (_pageIndex - begin < 2)
                            {
                                begin = begin - 1;
                            }
                        }
                        else if (end + 1 == _pageCount)
                        {
                            end = _pageCount;
                        }
                        for (var i = begin; i <= end; i++)
                        {
                            if (_pageIndex == i)
                            {
                                <li class="curr">
                                    <span>@i</span>
                                </li>
                            }
                            else
                            {

                                <li onclick="goPager(@i)">
                                    <a href="javascript:void(0);" title="第 @i 页">@i</a>
                                </li>
                            }
                        }
                        if (end != _pageCount)
                        {
                            <li>
                                <span>...</span>
                            </li>
                        }
                    }
                }
            </ul>
            if (_pageIndex < _pageCount)
            {
                <div class="a_n">
                    <a href="javascript:void(0);" onclick="goPager(@(_pageIndex+1))" title="下一页">下一页</a>
                </div>
            }
            else
            {
                <div class="a_n">
                    <span class="disabled">下一页</span>
                </div>
            }
            <div class="a_n">
                <a href="javascript:void(0);" onclick="goPager(@_pageCount)" title="末页">末页</a>
            </div>
            <div class="a_n">
                共 @_pageCount 页
            </div>
        }

    }

</div>
<script type="text/javascript">
    var goPager = function (pageIndex) {
        if (pageIndex == null || pageIndex <= 0) {
            return;
        }
        $.ajax({
            url: "@ViewBag.dataViewPath",
            type: "get",
            data: { id: '@ViewBag.showId', Page: pageIndex, t: (new Date()).getTime() },
            success: function (result) {
                $.ajax({
                    url: "/Pagers/BBSPager",
                    type: "get",
                    data: { id: '@ViewBag.showId', dataViewPath: "@ViewBag.dataViewPath", conatinerid: "@ViewBag.containerId", pageIndex: pageIndex, pageSize: '@_pageSize', totalCount: '@_totalCount', t: (new Date()).getTime() },
                    success: function (pagerResult) {
                        $("#@ViewBag.containerId").html(result);
                        $(".pagers").html(pagerResult);
                    },
                    error: function (err) { }
                });
            },
            error: function (err) { }
        });
    }
</script>