@model Vcyber.BLMS.Entity.SNCard
@{
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
    ViewBag.Title = "我的卡券";
}
<style>
    .jj_cont {
        padding-top: 4px;
    }

    #partialmywalletbluebean {
        padding: 0 4px;
        float: left;
    }

    #partialmymycardrecord {
        float: left;
    }

    #partialmyscore {
        float: left;
    }


    /*   我的卡券    */

    .jj_cont li {
        cursor: pointer;
    }

    .jinruluntan {
        padding: 11px 0;
        width: 100%;
        height: 34px;
        background: #EEEEEE;
        margin-bottom: 1px;
    }

        .jinruluntan dl {
            width: 154px;
            margin: 0 auto;
            height: 34px;
            color: #3D3F43;
        }

        .jinruluntan dt {
            float: left;
            margin-right: 6px;
        }

        .jinruluntan dd h3 {
            font-size: 18px;
        }

        .jinruluntan dd span {
            font-size: 12px;
        }

    .geren_ka {
        width: 100%;
        height: 84px;
        margin-top: 1px;
        background: #EEEEEE;
    }

        .geren_ka dl {
            margin-left: 17px;
            padding-top: 16px;
        }

        .geren_ka dt {
            float: left;
            margin-right: 10px;
        }

        .geren_ka dd p {
            font-size: 16px;
            margin-bottom: 12px;
        }

    .kaquan_box {
        height: 350px;
        width: 99.8%;
        border: 1px solid #EEEEEE;
        margin-top: 20px;
    }

        .kaquan_box h2 {
            height: 50px;
            line-height: 50px;
            font-size: 14px;
            text-align: center;
            background: #EEEEEE;
        }

        .kaquan_box ul {
            width: 670px;
            margin: 0 auto;
            margin-top: 30px;
        }

        .kaquan_box li {
            background: url(../img/erwei_bg.png) no-repeat;
            width: 186px;
            height: 280px;
            float: left;
            margin-right: 36px;
        }

            .kaquan_box li:last-child {
                margin-right: 0;
            }

            .kaquan_box li img {
                display: block;
                margin: 0 auto;
                width: 147px;
                height: 147px;
                margin-top: 18px;
            }

    .kaquan_b {
        color: #004587;
    }

    .kaquan_box li p {
        height: 38px;
        line-height: 38px;
        font-size: 12px;
        text-align: center;
        margin-top: 21px;
    }

    .kaquan_box li span {
        font-size: 12px;
        text-align: center;
        display: block;
        margin-top: 10px;
    }

    .jj_cont label, .jj_cont span {
        font-size: 13px !important;
        color: #767575 !important;
    }
</style>
<div>
    <div class="heaer">
        @Html.Action("HomeHeader", "Header", new { pageName = "Mycenter" })
    </div>
    <div class="content">
        <div class="n_all_cont">
            <div class="n_left_cont">
                @Html.Partial("_PartialUserInfo", ViewData["curUserEntity"])
                @Html.Partial("_PartialMyWallet", ViewData["curUserEntity"])
            </div>
            <div class="n_right_cont">
                <p class="select_menu"><a href="/MyCenter/Index">个人中心 ></a><a href="/Mycenter/MyCustomCardIndex">我的卡券</a></p>
                <div class="gy_cont">
                    <div class="gy_title">
                        <div class="gy_zi">
                            <h1>我的卡券</h1>
                            <span>Account Information</span>
                        </div>
                    </div>

                    <div class="kaquan_box" style="height:auto; float:left;">
                        <h2>候机服务券</h2>
                        @{
                            if (Model != null)
                            {
                                <ul style="">
                                    <li style="height: auto; margin-right: 36px; background: url(/img/erwei_bg.png) 100% 186px;margin-left:35%;">
                                        <img src='/QrCodeHandler.ashx?e=m&q=Two&s=12&t=@Model.SNCode'>
                                        @{
                                            if (2 == Model.Status)
                                            {
                                                <p style="margin-top: 15px;">空港易行服务码：@Model.SNCode</p>
                                                if (DateTime.Parse(DateTime.Parse(Model.SendTime.ToString()).AddMonths(3).AddDays(-1).ToShortDateString()) >= DateTime.Parse(DateTime.Now.ToShortDateString()))
                                                {
                                                    <p class="kaquan_b" style="margin-top:-10px;">
                                                        未使用
                                                    </p>
                                                }
                                                else
                                                {
                                                    <p class="kaquan_b" style="margin-top:-10px;">
                                                        已过期
                                                    </p>
                                                }
                                                <span style="padding: 10px 0; background-color: #fff;">@Model.SendTime.Value.ToString("yyyy-MM-dd HH:mm") </span>
                                            }
                                            else if (3 == Model.Status)
                                            {
                                                <p style="margin-top: 15px;">空港易行服务码：@Model.SNCode</p>
                                                <p style="margin-top: -10px;">已使用</p>
                                                <span style="padding: 10px 0; background-color:#fff;">@Model.UseTime.Value.ToString("yyyy-MM-dd HH:mm") 预约</span>
                                            }
                                        }

                                    </li>
                                </ul>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        @Html.Action("Index", "Footer")
    </div>
</div>
