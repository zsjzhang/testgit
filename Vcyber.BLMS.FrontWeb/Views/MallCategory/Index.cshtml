            <div id="pro_list">
                <ul>
                    <li class="list_click">

                        <a href="javascript:void(0);)" onclick="productQuery(this);"> 默认排序<input type="hidden" name="ordertype" value="1" /> </a>
                    </li>
                    <p>/</p>
                    <li>
                        <a href="javascript:void(0);)" onclick="productQuery(this);"> 销量<input type="hidden" name="ordertype" value="3" /> </a>
                    </li>
