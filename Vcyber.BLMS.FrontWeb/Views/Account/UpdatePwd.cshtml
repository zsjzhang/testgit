@{
    ViewBag.Title = "权限- 修改密码";
    Layout = null;
}
<head>
    <style>
        body {
            display: none;
        }
    </style>
    <script>
        try{
                top.location.hostname;
                if (top.location.hostname != window.location.hostname) {
                top.location.href =window.location.href;
            }
            }
                catch(e){
                top.location.href = window.location.href;
            }
    </script>
</head>

<script>
    if (self == top) {
        var theBody = document.getElementsByTagName('body')[0];
        theBody.style.display = "block";
    } else {
        top.location = self.location;
    }
</script>
<div class="container panel panel-default">
    <div class="panel-body"><strong>用户密码修改</strong></div>
</div>
<div class="container panel panel-default">
    <div class="row panel-body">
        <form name="form" class="form-horizontal" role="form" ng-submit="updatePwd()" novalidate>
            <div class="form-group">
                <label class="col-md-4 text-right">当前密码:</label>
                <div class="col-md-8">
                    <input type="password" name="opwd" ng-model="userInfo.OldPassword" class="form-control" placeholder="请输入当前密码" required autofocus />
                    <span ng-show="form.npwd.$invalid">不能为空</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 text-right">新密码:</label>
                <div class="col-md-8">
                    <input type="password" name="npwd" ng-model="userInfo.Password" class="form-control" placeholder="请输入新密码" ng-minlength="6" required autofocus />
                    <span ng-show="form.npwd.$invalid">不能为空且不能小于6位</span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 text-right">重复新密码:</label>
                <div class="col-md-8">
                    <input type="password" name="npwd1" ng-model="userInfo.ConfirmPassword" class="form-control" placeholder="请再次输入新密码" ng-minlength="6" required autofocus />
                    <span ng-show="form.npwd1.$invalid">不能为空且不能小于6位</span>
                </div>
            </div>
            <div class="col-md-offset-4 col-md-8">
                <button type="submit" class="btn btn-primary" ng-disabled="form.$invalid">确定</button>
            </div>

        </form>
    </div>
</div>

