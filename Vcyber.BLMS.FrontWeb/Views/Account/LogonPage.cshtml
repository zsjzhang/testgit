<script>
    $(function () {
        if (!('placeholder' in document.createElement('input'))) {
            $('input[placeholder],textarea[placeholder]').each(function () {
                var that = $(this),
                text = that.attr('placeholder');

                if (that.val() === "") {
                    that.val(text).addClass('placeholder');
                }
                that.focus(function () {
                    if (that.val() === text) {
                        that.val("").removeClass('placeholder');
                    }
                })
                .blur(function () {
                    if (that.val() === "") {
                        that.val(text).addClass('placeholder');
                    }
                })
                .closest('form').submit(function () {
                    if (that.val() === text) {
                        that.val('');
                    }
                });
            });
        }
     
    });

    function loadUrl() {
        var _curReturnUrl = getQueryString("returnUrl");
        if (_curReturnUrl != null && _curReturnUrl != "") {
            if (_curReturnUrl.indexOf("from=CS", 0) >= 0) {
                location.href = "/Account/AccountRegister?returnUrl=" + encodeURIComponent(_curReturnUrl) + "&source=cs_questionnaire";
            } else {
                location.href = "/Account/AccountRegister?returnUrl=" + encodeURIComponent(_curReturnUrl) + "&source=blms_questionnaire";
            }
        } else {
            location.href = "/Account/AccountRegister";
        }
    }
</script>

