<script>
    $(function () {
        $('.zsyLoginBox li').on('mouseover', function () {
            $('.zsyLoginBox li').removeClass('on');
            $(this).addClass('on');
            $('.zsyLoginBox div').removeClass('act');
            $('.zsyLoginBox div').eq($(this).index()).addClass('act');
            console.log($('.zsyLoginBox div').eq($(this).index()))
        });
        $("#loginPageSendSMSCaptcha").click(function () {
            $("#loginMobileerrored").hide();
            $("#loginPageCaptchaerrored").hide();
            var _mobile = $("#homeAccountPhone").val();
            var _imageCode = $("#LoginCaptcha").val();

            //校验是否重复点击
            if ($(this).attr("disabled")) {
                return false;
            }
           

            if (_mobile === null || _mobile === "") {
                popWindownBlue( '请输入手机号码');
                return false;
            } else {
                var PhoneReg = /^(1[3|4|5|7|8|][0-9]{9})$/;
                if (!PhoneReg.test(_mobile)) {
                    popWindownBlue( "请正确输入手机号码");
                    return false;
                }
            }
            if (!_imageCode) {
                //$("#loginPageCaptchaerrored").show();
                popWindownBlue( "请输入图片验证码");
                return false;
            }
            //验证码发送
            loginsendCaptchaAndCheckImageCode(_mobile, _imageCode, this);
        });

        var loginsendCaptchaAndCheckImageCode = function (mobile, imageCode, obj) {

            $.ajax({
                url: "/Captcha/sendCaptchaAndCheckImageCode",
                dataType: "json",
                type: "post",
                data: { mobile: mobile, imageCode: imageCode },
                success: function (result) {
                    if (!result || result.code == "400") {
                        popWindownBlue( "验证码发送失败,请重新发送");
                        return false;
                    }
                    else if (!result || result.code == "401") {
                        popWindownBlue( "图形验证码输入错误");
                        return false;
                    }
                    else if (result.code == "200") {
                        //更新剩余时长
                        countDown(obj, 60);
                        popWindownBlue( "短信验证码已发送");
                        return false;
                    }
                },
                error: function (err) {
                    popWindownBlue( "err");
                }
            });
        };

     
    });

