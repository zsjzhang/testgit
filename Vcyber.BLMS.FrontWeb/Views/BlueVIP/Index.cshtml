@{
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
    ViewBag.Title = "蓝缤服务";
}

<div>
    <div class="header">
        @Html.Action("HomeHeader", "Header", new { pageName = "BlueVIP" })
    </div>
    <div class="n_all_cont" style="height:1200px;">
        <div class="n_left_cont">
            <div class="center logon" style="width: 286px; height: auto; margin-top:0;">
                
                <div  class="logon"  style=" margin-top:0px">
                    @{
                        if (this.User.Identity.IsAuthenticated)
                        {
                            @Html.Action("HomeLogonSuccess", "Account")
                        }
                        else
                        {
                            @Html.Action("HomeLogon", "Account")
                        }
                    }
                </div>
            </div>
            <div class="homereserve">
                @Html.Action("FindDealer", "Home")
            </div>
            <div class="homereserve">
                @Html.Action("ReserveRegion", "Home")
            </div>
            <div class="homeShortcut">
                @Html.Action("ShortcutRegion", "Home")
            </div>
            @*<div class="homeproduct">
                @Html.Action("HotExchangeProductList", "Product")
            </div>
            <div class="homehotnews">
                @Html.Action("HotNewsRegion", "home")
            </div>*@
        </div>
        <div class="n_right_cont" style="margin-top:-20px;">
            <div class="gy_list">
                <div class="gy_title">
                    <div class="gy_zi">
                        <a href="/LifeService/Index" target="_blank"><h1>生活服务</h1></a>
                        <a href="/LifeService/Index" target="_blank"><span>Life Service</span></a>                      
                        <a href="/LifeService/Index" target="_blank"><img src="/img/arrow.png" class="arrow_n" /></a>
                    </div>
                </div>
                <div class="gy_list_box">
                    <a href="/LifeService/Index" target="_blank">
                        <dl>
                            <dt style="width:650px; height:217px;margin-bottom:14px;"><img src="/img/big_img.png"></dt>
                            <dd>
                                <h3>50个机场候机尊享服务</h3>
                                <p style="margin-top:14px;">北京现代为第九代索纳塔车主提供全国29个省及直辖市，50家机场嘉宾休息室尊享候机服务.让您体验高端、便捷候机服务；茶点、书刊、音像免费提供，尊享优质舒适候机服务。</p>
                            </dd>
                        </dl>
                    </a>
                </div>
            </div>
            <div class="gy_list">
                <div class="gy_title">
                    <div class="gy_zi">
                        <a href="/CarService/Index" target="_blank"><h1>车辆服务</h1></a>
                        <a href="/CarService/Index" target="_blank"><span>Vehicle Service</span></a>
                        <a href="/CarService/Index" target="_blank"><img src="/img/arrow.png" class="arrow_n" /></a>
                    </div>
                </div>
                <div class="gy_list_box">
                    
                    <dl>
                        <dt style="width: 650px; height: 217px; margin-bottom: 14px;"><a href="/CarService/Index" target="_blank"><img src="/img/5years10.jpg"></a></dt>
                        <dd>
                            <h3><a href="/CarService/Index" target="_blank">免费取送车服务</a></h3>
                            <p style="margin-top:14px;"><a href="/CarService/Index" target="_blank">专业人员为您免费提供车辆维修保养的取送车服务。（服务半径为20km）</a></p>
                        </dd>
                    </dl>
                    
                </div>

            </div>

            <div class="reserve">
                <style>

                    .active {
                        border-left: 2px solid #075090;
                        border-right: 2px solid #075090;
                        border-top: 2px solid #075090;
                    }
                    .center_lb{
                        height:auto;
                    }
                </style>
                @*@Html.Action("HomeCarService", "Car")*@

                <script type="text/javascript">
                    $(".center_lb_title>div").hover(function () {
                        $(this).siblings("div").removeClass("active");
                        var index = $(".center_lb_title>div").index(this);
                        $(this).addClass("active");
                        //$(this).find("a").find("span").addClass("actives");
                        //$(this).find("a").addClass("actives2");
                        $(".cont-box>div").eq(index).show().siblings('div').hide();

                    }, function () {
                        //$(this).find("a").find("span").removeClass("actives");
                        //$(this).find("a").removeClass("actives2");
                    });
                </script>
            </div>
        </div>


    </div>
    <div class="footer" style="float:left;">
        @Html.Action("Index", "Footer")
    </div>
</div>


