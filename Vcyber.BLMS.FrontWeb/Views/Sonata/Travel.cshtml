@{
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
    ViewBag.Title = "长途旅行关怀";
}

<div>
    <div class="header">
        @Html.Action("HomeHeader", "Header", new { pageName = "Sonata" })
    </div>
    <div class="n_all_cont" style="height:1200px;">
        <div class="n_left_cont">
            <div class="center logon" style=" width: 286px; height: auto; margin-top:0;">
                @{
                    if (this.User.Identity.IsAuthenticated)
                    {
                        @Html.Action("HomeLogonSuccess", "Account")
                    }
                    else
                    {
                        @Html.Action("HomeLogon", "Account")
                    }
                }
            </div>
            <div class="homereserve">
                @Html.Action("ReserveRegion", "Home")
            </div>
            <div class="homeShortcut">
                @Html.Action("ShortcutRegion", "Home")
            </div>
            <div class="homeproduct">
                @Html.Action("HotExchangeProductList", "Product")
            </div>
            <div class="homehotnews">
                @Html.Action("HotNewsRegion", "home")
            </div>

        </div>
        <div class="n_right_cont">

            <div class="new_menu">
                <p class="select_menu">  <a href="/BlueVIP/Index">蓝缤权益</a> ><a href="/CarService/Index">车辆服务</a> >长途旅行关怀</p>
            </div>
            <div class="gy_cont">
                <div class="gy_title">
                    <div class="gy_zi">
                        <h1>长途旅行关怀</h1>
                        <span>Long distance travel service</span>
                    </div>
                </div>

                <div class="fwxq_box" style=" background: url(/img/3year9.png) no-repeat 100% 0;">
                    <p>
                        2015年12月31日之前购买全新途胜并注册成为bluemembers银卡会员的车主，购车之日起3年内，
                        每年提供1次（出行前和回程之后，共2次免费检测）。
                    </p><br />
                    <p style="font-weight:900">
                        服务对象：
                    </p>
                    <p>
                        全新途胜银卡会员
                    </p><br />
                    <p style="font-weight:900">
                        服务方式：
                    </p>
                    <p>
                        您可直接通过北京现代bluemembers官方网站、微信、APP或致电北京现代400客服热线进行预约，也可直接向北京现代授权经销商致电享受此服务。
                    </p><br />

                    <p style="font-weight:900">
                        特别提示：
                    </p>
                    <p>
                        每年提供1次服务（共2次免费检测），当年未使用次年视为自动放弃
                    </p>
                    <p style="font-weight:900;margin-top:36px;">
                        客户流程：
                    </p>
                    <img src="/Img/39liucheng.png">
                    @if (string.IsNullOrEmpty(ViewBag.source))
                    {
                        <a href="/Sonata/TravelForm" class="yuyue befor_ac">预<b style="margin: 0 6px;"></b>约</a>
                    }
                    else
                    {
                        <a href="/Sonata/TravelForm?source=@ViewBag.source" class="yuyue befor_ac">预<b style="margin: 0 6px;"></b>约</a>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
<div class="footer">
    @Html.Action("Index", "Footer")
</div>